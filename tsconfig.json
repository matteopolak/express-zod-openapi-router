{
	"compilerOptions": {
		"target": "es2022",
		"module": "esnext",
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./lib",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"paths": {
			"express-zod-openapi": ["./src/index.ts"]
		}
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"]
}
