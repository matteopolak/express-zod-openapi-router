{
	"name": "express-zod-openapi",
	"version": "0.0.1",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"dev": "tsc-watch -p tsconfig.build.json",
		"build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"publish": "pnpm build && npm publish --access public",
		"example": "tsc -p examples/tsconfig.json && tsc-alias -p examples/tsconfig.json && node examples/build-examples/examples/$EXAMPLE.js",
		"fmt": "eslint --fix .",
		"check": "tsc --noEmit && eslint .",
		"test": "pnpm test:unit",
		"test:unit": "vitest run unit"
	},
	"type": "module",
	"author": "Matthew Polak <contact@matteopolak.com>",
	"license": "MIT",
	"description": "",
	"dependencies": {
		"@types/express": "^4.17.21",
		"@types/express-serve-static-core": "^4.19.5",
		"@types/qs": "^6.9.15",
		"express": "^4.19.2",
		"openapi-types": "^12.1.3",
		"zod": "^3.23.8",
		"zod-openapi": "^2.19.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.8.0",
		"@scalar/express-api-reference": "^0.4.134",
		"@stylistic/eslint-plugin": "^2.6.2",
		"eslint": "9.x",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"globals": "^15.9.0",
		"tsc-alias": "^1.8.10",
		"tsc-watch": "^6.2.0",
		"typescript-eslint": "^8.0.1",
		"vitest": "^2.0.5"
	}
}
